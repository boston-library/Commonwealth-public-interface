                              :nav_link_path => advanced_search_path}
        },
        :explore => {
                :map => {:nav_link_title => t('blacklight.maps.title'),
                            :nav_link_path => map_path},
                :collections => {:nav_link_title => t('blacklight.collections.nav'),
                                 :nav_link_path => collections_path},
                :institutions => {:nav_link_title => t('blacklight.institutions.nav'),
                                  :nav_link_path => institutions_path},
                :formats => {:nav_link_title => t('blacklight.navigation.format'),
                                  :nav_link_path => formats_facet_path}
        },
        :for_libraries => {
                :membership => {:nav_link_title => 'Membership',
                               :nav_link_path => 'http://digitalcommonwealth.memberlodge.org/membership'},
                :contribute => {:nav_link_title => 'Contribute Your Collections',
                                :nav_link_path => 'http://digitalcommonwealth.memberlodge.org/contribute'},
                :conference => {:nav_link_title => 'Conferences, Training & Events',
                                :nav_link_path => 'http://digitalcommonwealth.memberlodge.org/events'},
                :training => {:nav_link_title => 'Digitization & Metadata Services',
                              :nav_link_path => 'http://digitalcommonwealth.memberlodge.org/digitization'}
        },
        :for_educators => {
                :lesson_plans => {:nav_link_title => t('blacklight.pages.lesson_plans.title'),
                                  :nav_link_path => lesson_plans_path}
        },
        :about => {
                :overview => {:nav_link_title => t('blacklight.pages.about_dc.title'),
                         :nav_link_path => about_dc_path},
                :news=> {:nav_link_title => t('blacklight.pages.news.title'),
                         :nav_link_path => blog_path},
                :directory => {:nav_link_title => 'Member Directory',
