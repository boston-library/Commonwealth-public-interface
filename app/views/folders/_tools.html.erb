<ul class="folderTools">
  <li class="cite">
    <%= link_to t('blacklight.tools.cite'),
                  citation_catalog_path(:sort=>params[:sort],
                  :per_page=>params[:per_page],
                  :id => @folder_items.collect{|fitem| fitem.document_id}),
                  {:id => 'citeLink', :name => 'citation', :class => 'lightboxLink btn'} %>
  </li>
  <li class="refworks">
    <%= render :partial => 'catalog/refworks_form', :locals => {:documents=>@folder_items} %>
  </li>

  <li class="endnote">
    <%= link_to t('blacklight.tools.endnote'),
                  endnote_catalog_path(:sort=>params[:sort],
                                       :per_page=>params[:per_page],
                                       :id => @folder_items.collect {|fitem| fitem.document_id},
                                       :format => 'endnote'),
                  {:class => 'btn'} %>
  </li>
  <li class="email">
    <%= link_to t('blacklight.tools.email'),
                email_catalog_path(:sort=>params[:sort],
                                   :per_page=>params[:per_page],
                                   :id => @folder_items.collect {|fitem| fitem.document_id}),
                :class=>"lightboxLink btn",
                :id => "emailLink" %>
  </li>
  <li>
    <%= link_to t('blacklight.folder_items.clear.action'),
                clear_folder_items_path,
                :method => :delete,
                :data => { :confirm => t('blacklight.folder_items.clear.confirm') },
                :class => 'btn' %>
  </li>
</ul>