<ul class="folderTools">
  <li class="cite">
    <%= link_to t('blacklight.tools.cite'),
                  citation_catalog_path(:sort=>params[:sort],
                                        :per_page=>params[:per_page],
                                        :id => @folder_items.collect{|fitem| fitem.document_id}),
                  {:id => 'citeLink', :name => 'citation', :class => 'lightboxLink btn'} %>
  </li>
  <li class="email">
    <%= link_to t('blacklight.tools.email'),
                email_catalog_path(:sort=>params[:sort],
                                   :per_page=>params[:per_page],
                                   :id => @folder_items.collect {|fitem| fitem.document_id}),
                :class=>"lightboxLink btn",
                :id => "emailLink" %>
  </li>
</ul>