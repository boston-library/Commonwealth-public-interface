<div id="content" class="span12 show-document">

  <% @page_title = t('blacklight.search.show.title', :document_title => @document[blacklight_config.show.html_title], :application_name => application_name) %>
  <% extra_head_content << render_link_rel_alternates %>

  <%# this should be in a partial -%>
  <div id="document" class="<%= render_document_class %>">

    <div id="doc_<%= @document.id.to_s.parameterize %>">

      <h2 class="institution-title">
        <%= @institution_title %>
      </h2>

      <div id="institution_location">
        <% if @document[:subject_geo_state_tsim] %>
            <%= @document[:subject_geo_state_tsim].first %>
            <% if @document[:subject_geo_county_tsim] %>
                &nbsp; &gt; &nbsp; <%= @document[:subject_geo_county_tsim].first %> County
                <% if @document[:subject_geo_city_tsim] %>
                    &nbsp; &gt; &nbsp; <%= @document[:subject_geo_city_tsim].first %>
                    <% if @document[:subject_geo_citysection_tsim] %>
                        &nbsp; &gt; &nbsp; <%= @document[:subject_geo_citysection_tsim].first %>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
      </div>

      <div class="document">

<div class="row">

  <div class="span9">

    <div id="institution_search_tools" class="well well-small">
      <%= render :partial => 'search_form_institution',
                 :locals => {:document => @document} %>
      <div id="collection_view_all">
        <%= link_to_all_inst_items('btn btn-info view-all-inst') %>
      </div>
    </div>

    <% if @institution_image_pid %>
        <% image_datastream = datastream_disseminator_url(@institution_image_pid,'accessMaster') %>
        <%= djatoka_image_tag(image_datastream,
                              {:resolver => Rails.configuration.djatoka_resolver.base_url,
                               :scale => 300,
                               :alt => @institution_title,
                               :class => 'institution_img_show'}) %>
    <% else %>
        <%= image_tag('institution_index.png',
                      :alt => @institution_title,
                      :class => 'institution_img_show') %>
    <% end %>

    <div id="institution_desc">

      <% if @document[:abstract_tsim] %>
          <% @document[:abstract_tsim].each do |abstract| %>
              <p>
                <%= abstract %>
              </p>
          <% end %>
      <% end %>

      <% if @document[:institution_url_ss] %>
        <ul>
        <li id="institution_site_link">
          <%= link_to 'Visit institution web site',
                      @document[:institution_url_ss],
                      :class => 'institution_site_link',
                      :target => '_blank' %>
        </li>
        </ul>
      <% end %>

    </div>

      <% if @collex_documents.length > 0 %>
        <div id="institution_collections">
            <h4>Digital Collections:</h4>

            <%= render :partial => 'catalog/document_list',
                       :locals => {:documents => @collex_documents} %>

        </div>
      <% end %>

  </div>


  <div id="sidebar" class="span3">
    <%= javascript_include_tag 'commonwealth/collection_facets' %>
    <%= render :partial=>'facets' %>
  </div>

</div>

      </div>

    </div>

  </div>

  <% if @document.respond_to?(:export_as_openurl_ctx_kev) %>
      <!--
           // COinS, for Zotero among others.
           // This document_partial_name(@document) business is not quite right,
           // but has been there for a while.
      -->
      <span class="Z3988" title="<%= @document.export_as_openurl_ctx_kev(document_partial_name(@document)) %>"></span>
  <% end %>

</div>