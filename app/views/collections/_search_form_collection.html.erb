<div id="collection_search_form">
  <%= form_tag search_action_url,
               :method => :get,
               :class => 'search-query-form form-inline collection-search' do %>
      <%= render_hash_as_hidden_fields(params_for_search(:f => {blacklight_config.collection_field => [document[blacklight_config.index.title_field.to_sym]]}).except('q', 'search_field', 'qt', 'page')) %>

      <div class="input-append pull-left">
        <label for="q" class="sr-only"><%= t('blacklight.search.form.collection') %></label>
        <%= text_field_tag :q,
                           params[:q],
                           :placeholder => t('blacklight.search.form.collection'),
                           :class => 'search_q q input-large',
                           :id => 'q',
                           :autofocus => true %>
        <button type="submit" class="btn btn-primary search-btn" id="collection-search">
            <span class="submit-search-text"><%=t('blacklight.search.form.submit')%></span>
            <i class="icon-search icon-white"></i>
        </button>
      </div>
  <% end %>
</div>