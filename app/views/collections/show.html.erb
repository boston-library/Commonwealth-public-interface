<div id="content" class="span12 show-document">

  <% @page_title = t('blacklight.search.show.title', :document_title => @document[blacklight_config.show.html_title], :application_name => application_name) %>
  <% extra_head_content << render_link_rel_alternates %>

  <%# this should be in a partial -%>
  <div id="document" class="<%= render_document_class %>">

    <div id="doc_<%= @document.id.to_s.parameterize %>">

      <h2 class="collection-title"><%= @collection_title %></h2>

      <h4 class="collection-provenance">
        <% if @document[:institution_pid_ssi] %>
            <%= link_to(@document[:institution_name_ssim][0],
                        institutions_path + '/' + @document[:institution_pid_ssi],
                        :id => 'institution_link'
                ) %>
        <% elsif @document[:physical_location_ssim] %>
            <%= @document[:physical_location_ssim][0] %>
        <% end %>
      </h4>

      <div class="document">

        <div class="row">

          <div class="span9">
            <div id="collection_img">
              <% if @collection_image_pid && @collection_image_info %>
                  <% image_title = @collection_image_info[:title] %>
                  <% if @collection_image_pid.match(/\Aoai/) %>
                       <% img_element = image_tag(datastream_disseminator_url(@collection_image_pid,'thumbnail300'),
                                                  :alt => image_title,
                                                  :class => 'collection_img_show') %>
                  <% else %>
                      <% image_datastream = nonssl_image_uri(@collection_image_pid,'accessMaster') %>
                      <% img_element = djatoka_image_tag(image_datastream,
                                    {:resolver => Rails.configuration.djatoka_resolver.base_url,
                                    :scale => 300,
                                    :alt => image_title,
                                    :class => 'collection_img_show'}) %>
                  <% end %>
              <%= link_to(img_element,
                          solr_document_path(@collection_image_info[:pid])) %>
              <div id="collection_img_caption">
                <%= link_to(image_title,
                            solr_document_path(@collection_image_info[:pid])) %>
              </div>
            <% else %>
              <%= image_tag('dc_collection-icon.png',
                            :alt => @collection_title,
                            :class => 'collection_img_show') %>
            <% end %>
            </div>
            <div id="collection_search_tools" class="well well-small">
              <%= render :partial => 'search_form_collection', :locals => {:document => @document} %>
              <div id="collection_view_all">
                <%= link_to_all_col_items(@collection_title,
                                          'btn btn-info view-all-col') %>
              </div>
            </div>

            <div id="collection_desc">
                <% if @document[:abstract_tsim] %>
                      <% @document[:abstract_tsim].each do |abstract| %>
                          <%= abstract.html_safe %>
                      <% end %>
                <% end %>
            </div>

            <% if has_facet_values? %w[related_item_series_ssim] %>
                <div id="series_wrapper">
                    <%= render :partial=> 'catalog/facets_series' %>
                </div>
            <% end %>

            <%# full metadata display - DEPRECATED - no longer creating collection metadata %>
            <%# besides title and abstract %>
            <%# render :partial => 'collections/show_collection_metadata', :locals => {:document => @document} %>

          </div>

          <div id="sidebar" class="span3">
            <%= javascript_include_tag 'commonwealth/collection_facets' %>
            <%= render :partial=>'facets' %>
          </div>

        </div>

      </div>

    </div>

  </div>

  <% if @document.respond_to?(:export_as_openurl_ctx_kev) %>
      <!--
           // COinS, for Zotero among others.
           // This document_partial_name(@document) business is not quite right,
           // but has been there for a while.
      -->
      <span class="Z3988" title="<%= @document.export_as_openurl_ctx_kev(document_partial_name(@document)) %>"></span>
  <% end %>

</div>
