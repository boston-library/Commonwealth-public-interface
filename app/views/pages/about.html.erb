<% @page_title = t('blacklight.pages.about.title') + " - " + application_name %>
<div class="col-sm-9 about_content">
  <h2><%= t('blacklight.pages.about.title') %></h2>

  <ul class="page_list">
    <% if CommonwealthVlrEngine.config[:content][:homepage][:about][:enabled] %>
      <li><%= link_to CommonwealthVlrEngine.config[:content][:homepage][:about][:link_title], CommonwealthVlrEngine.config[:content][:homepage][:about][:link] %></li>
    <% end %>
    <li><%= link_to CommonwealthVlrEngine.config[:content][:homepage][:news][:non_rss_title], CommonwealthVlrEngine.config[:content][:homepage][:news][:non_rss_link] %></li>
    <li><%= link_to t('blacklight.pages.copyright.title'), copyright_path %></li>
    <li><%= link_to t('blacklight.pages.partners.title'), partners_path %></li>
    <li><%= link_to t('blacklight.pages.contact.title'), feedback_path %></li>
  </ul>
</div>
