<div class="row">
  <div class="col-sm-12 col-md-6">
    <h2>User sign in</h2>
    <div id="signin_wrapper">

      <%= form_for(resource,
                   as: resource_name,
                   url: session_path(resource_name),
                   html: { role: 'form' }) do |f| %>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label" for="user_email">Email</label>
          <div class="col-sm-6">
            <%= f.text_field :email, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label" for="user_password">Password</label>
          <div class="col-sm-6">
            <%= f.password_field :password, class: 'form-control' %>
            <span class="form-text">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
                  <%= link_to 'Forgot your password?', new_password_path(resource_name) %>
                <% end -%>
              </span>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="form-check col-sm-6">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <label id="remember_me" class="form-check-label">
                Remember me on this device
              </label>
            </div>
          </div>
        <% end -%>

        <div class="form-group row">
          <div class="offset-sm-2 col-sm-4">
            <%# f.submit "Sign in" %>
            <button type="submit" class="btn btn-primary">
              <span>Sign in</span>
            </button>
          </div>
        </div>
      <% end %>

      <div id="alt_signins">
        <%= link_to(image_tag('commonwealth-vlr-engine/bplLoginButton.png',
                              alt: 'Log in with your BPL library card',
                              class: 'alt_signin_btn'),
                    omniauth_authorize_path(resource_name, 'polaris', authenticity_token: form_authenticity_token),
                    method: :post) %>
        <%# omniauth_authorize_path(resource_name, provider) %>
      </div>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
  <div class="col-md-3 col-sm-6">
    <div id="why_log_in">
      <h5>Why sign in?</h5>
      <ul>
        <li>Create customized collections of your favorite items</li>
        <li>Save important searches</li>
        <li>Keep track of your search history</li>
      </ul>
    </div>
    <div id="membership_login">
      <h5>Looking for your DC Institutional or Friends account?</h5>
      <%= link_to 'Log in here', 'https://membership.digitalcommonwealth.org/Sys/Login', target: '_blank' %>.
    </div>
  </div>
</div>
