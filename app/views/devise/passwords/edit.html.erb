<div class="col-sm-9">
  <h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :id => 'password_edit', :class => 'form-horizontal', :role => 'form' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="inputPassword">New password</label>
        <div class="col-sm-4">
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="inputPassword">Confirm new password</label>
        <div class="col-sm-4">
          <%= f.password_field :password_confirmation, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-6">
          <%= f.submit 'Change password', :class => 'btn btn-primary' %>
          <%= link_to 'Cancel', root_path, :class => 'btn btn-default' %>
        </div>
      </div>

<% end %>

<%# render "devise/shared/links" %>
</div>