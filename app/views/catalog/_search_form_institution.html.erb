<div id="institution_search_form">
  <%= form_tag search_action_url,
               :method => :get,
               :class => 'search-query-form form-inline institution-search' do %>
      <%= search_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page],
                                  :f => {'physical_location_ssim' => [document[blacklight_config.index.show_link.to_sym]]}).html_safe %>

      <div class="input-append pull-left">
        <label for="q" class="hide-text"><%= t('blacklight.search.form.institution') %></label>
        <%= text_field_tag :q,
                           params[:q],
                           :placeholder => t('blacklight.search.form.institution'),
                           :class => 'search_q q input-large',
                           :id => 'q'%>
        <button type="submit" class="btn btn-primary search-btn" id="institution-search">
          <span class="submit-search-text"><%=t('blacklight.search.form.submit')%></span>
          <i class="icon-search icon-white"></i>
        </button>
      </div>
  <% end %>
</div>