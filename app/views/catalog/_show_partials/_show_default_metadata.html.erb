<div class="<%= params[:action]%>_details span9">
<div id="item_metadata" class="well">
  <h3>Item Information</h3>
  <dl class="defList dl-horizontal">
    <%# title field %>
    <% if document[:mods_title_info_ssm] %>
      <dt>Title:</dt>
      <dd>
        <% document[:mods_title_info_ssm].each do |title| %>
            <%= title %><br />
        <% end %>
      </dd>
    <% end %>
    <%# abstract/description field %>
    <% if document[:abstract_ssm] %>
        <dt>Description:</dt>
        <dd>
          <% document[:abstract_ssm].each do |abstract_ssm| %>
              <%= abstract_ssm %><br />
          <% end %>
        </dd>
    <% end %>
    <%# creator field - need to figure out handling of multiple creators %>
    <% if document[:name_personal_ssim] %>
        <dt>
          <% if document[:name_personal_role_ssim] %>
            <%= document[:name_personal_role_ssim].first.strip %>:
          <% else %>
            Creator:
          <% end %>
        </dt>
        <dd>
          <%= document[:name_personal_ssim].first.strip  %>
        </dd>
    <% end %>
    <%# genre field - basic %>
    <% if document[:mods_genre_basic_ssim] %>
    <dt>Format:</dt>
    <dd>
      <% document[:mods_genre_basic_ssim].each do |format| %>
          <%= link_to_facet(format, 'mods_genre_basic_ssim') %><br />
      <% end %>
    </dd>
  <% end %>
    <%# genre field - specific %>
    <% if document[:mods_genre_specific_ssim] %>
        <dt>Genre:</dt>
        <dd>
          <% document[:mods_genre_specific_ssim].each do |genre| %>
              <%= link_to_facet(genre, 'mods_genre_specific_ssim') %><br />
          <% end %>
        </dd>
    <% end %>
    <%# collex field %>
    <% if document[:collection_name_ssim] %>
    <dt>Collection:</dt>
    <dd>
      <% document[:collection_name_ssim].each do |collection| %>
          <%= link_to_facet(collection, 'collection_name_ssim') %><br />
      <% end %>
    </dd>
  <% end %>
    <%# institution field %>
    <% if document[:physicalLocation_ssim] %>
    <dt>Institution:</dt>
    <dd>
      <% document[:physicalLocation_ssim].each do |institution| %>
          <%= link_to_facet(institution, 'physicalLocation_ssim') %><br />
      <% end %>
    </dd>
  <% end %>
    <%# topic field %>
    <% if document[:subject_topic_ssim] %>
        <dt>Subject (topic):</dt>
        <dd>
            <% document[:subject_topic_ssim].each do |topic| %>
                <%= link_to_facet(topic, 'subject_topic_ssim') %><br />
            <% end %>
        </dd>
    <% end %>
    <%# name subject field %>
    <% if document[:subject_name_corporate_ssim] || document[:subject_name_personal_ssim] %>
        <dt>Subject (name):</dt>
        <dd>
          <% if document[:subject_name_corporate_ssim] %>
            <% document[:subject_name_corporate_ssim].each do |corp_name| %>
                  <%= link_to_facet(corp_name, 'subject_name_corporate_ssim') %><br />
            <% end %>
          <% end %>
          <% if document[:subject_name_personal_ssim] %>
              <% document[:subject_name_personal_ssim].each do |pers_name| %>
                  <%= link_to_facet(pers_name, 'subject_name_personal_ssim') %><br />
              <% end %>
          <% end %>
        </dd>
    <% end %>
    <%# geo subject field %>
    <% if document[:subject_geographic_ssim] %>
        <dt>Subject (geographic):</dt>
        <dd>
            <% document[:subject_geographic_ssim].each do |subject_geo| %>
                <%= link_to_facet(subject_geo, 'subject_geographic_ssim') %><br />
            <% end %>
        </dd>
    <% end %>
    <%# note field %>
    <% if document[:mods_note_ssi] %>
        <dt>Notes:</dt>
        <dd>
          <%# document[:mods_note_ssi].each do |note| %>
          <%= document[:mods_note_ssi] %>
          <%# end %>
        </dd>
    <% end %>
    <%# extent field %>
    <% if document[:extent_ssim] %>
        <dt>Extent:</dt>
        <dd>
          <% document[:extent_ssim].each do |extent| %>
              <%= extent %><br />
          <% end %>
        </dd>
    <% end %>
    <%# local-accession id field %>
    <% if document[:local_accession_id_ssim] %>
        <dt>Accession # (local):</dt>
        <dd>
          <% document[:local_accession_id_ssim].each do |accession| %>
              <%= accession %><br />
          <% end %>
        </dd>
    <% end %>
    <%# local-other id field %>
    <% if document[:local_other_id_ssim] %>
        <dt>Identifier (local):</dt>
        <dd>
          <% document[:local_other_id_ssim].each do |local_other| %>
              <%= local_other %><br />
          <% end %>
        </dd>
    <% end %>
    <%# ARK URI field %>
    <% if document[:identifier_uri_ssim] %>
      <dt>Permalink:</dt>
      <dd>
        <%# t('blacklight.ark.prefix') + document[:id].gsub(/[\D]*:/,'') %>
        <%= document[:identifier_uri_ssim].first %>
      </dd>
    <% end %>
    <%# rights field %>
    <% if document[:mods_use_and_reproduction_ssim] %>
      <dt>Terms of Use:</dt>
      <dd>
        <% document[:mods_use_and_reproduction_ssim].each do |terms| %>
            <%= terms %><br />
        <% end %>
      </dd>
    <% end %>
  </dl>
</div>
</div>