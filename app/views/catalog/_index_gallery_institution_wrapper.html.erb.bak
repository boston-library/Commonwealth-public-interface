<%# institution catalog#index gallery view %>
<div class="document col-xs-6 col-md-3">
  <div class="thumbnail">
    <% thumb = image_tag('dc_library-icon.png',
                         :alt => document[blacklight_config.index.title_field.to_sym]) %>
    <%= link_to(thumb, institution_path(:id => document[:id])) %>
    <div class="caption">
      <%= render_document_partials document, blacklight_config.view_config(:gallery).partials, :document_counter => document_counter %>
    </div>
  </div>
</div>