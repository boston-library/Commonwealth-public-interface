<% @documents.each do |document| %>

    <h5><%= t('blacklight.citation.chicago') %></h5>

    <div class="citation-content">
      <p>
        <%# TODO: if multiple creators, put ', ' between each, but ', and ' before last one   %>
        <% if document[:name_personal_tsim] %>
            <% document[:name_personal_tsim].each do |creator| %>
                <%= creator %>.&nbsp;
            <% end %>
        <% end %>
        "<%= document[blacklight_config.index.show_link.to_sym] %>."&nbsp;
        <%= document[:genre_basic_ssim].first.gsub(/s\z/,'') %>.&nbsp;
        <%# if date, add it here, period+space at end %>
        <% if document[:date_created_start_dtsi] %>
            <%= Time.new(document[:date_created_start_dtsi]).year %>.&nbsp;
        <% end %>
        <em><%= t('blacklight.application_name') %></em>,&nbsp;
        <%= document[:identifier_uri_ss] %>&nbsp;
        (accessed <%= Date.today.strftime('%B %d, %Y') %>).
      </p>
    </div>

<% end %>