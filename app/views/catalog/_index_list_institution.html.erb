<div class="institution_index_container">

  <div class="media">
    <% thumb = image_tag('dc_library-icon.png',
                         :alt => document[blacklight_config.index.title_field.to_sym],
                         :class => 'index_thumb media-object') %>
    <%= link_to(thumb, '/institutions/' + document[:id], :class => 'pull-left') %>

    <div class="media-body">

      <div class="item_index_title">
        <%= link_to(document[blacklight_config.index.title_field.to_sym],
                    '/institutions/' + document[:id]) %>
      </div>

    </div>

  </div>

</div>