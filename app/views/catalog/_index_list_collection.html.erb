<%# index list view template  %>
<div class="collection_index_container">

  <div class="media">
    <% if document[:exemplary_image_ssi] %>
        <% thumb = image_tag(datastream_disseminator_url(document[:exemplary_image_ssi], 'thumbnail300'),
                             :alt => document[blacklight_config.index.show_link.to_sym],
                             :class => 'index_thumb media-object') %>
    <% else %>
        <% thumb = image_tag('dc_collection-icon.png',
                             :alt => document[blacklight_config.index.show_link.to_sym],
                             :class => 'index_thumb media-object') %>
    <% end %>
    <%= link_to(thumb, collection_path(:id => document[:id]), :class => 'pull-left') %>

    <div class="media-body">

      <div class="view_all_link">
        <%= link_to_all_col_items(document[blacklight_config.index.show_link.to_sym],
                                  'view-all-col') %>
      </div>

      <div class="item_index_title">
        <%= link_to(document[blacklight_config.index.show_link.to_sym],
                    collection_path(:id => document[:id])) %>
        <% if params[:controller] == 'catalog' %>
            <%= image_tag('dc_collection-icon.png',
                          :alt => 'collection icon',
                          :class => 'collection-icon') %>
        <% end %>
      </div>

      <div class="collection-location">
        <% if document[:institution_pid_ssi] && document[:institution_name_ssim] %>
            <%= link_to(document[:institution_name_ssim].first,
                        institution_path(document[:institution_pid_ssi])) %>
        <% end %>
      </div>

      <div class="item_index_details">
        <% if document[:abstract_tsim] %>
            <% abstract_index = strip_tags(document[:abstract_tsim].first.gsub(/<\/p><p>/,' ')).html_safe %>
            <%= truncate(abstract_index,
                        :length => 300,
                        :separator => ' ',
                        :omission => '... ') %>
            <% if abstract_index.length > 300 %>
                <%= link_to('more',
                            collection_path(:id => document[:id]),
                           :class => 'read-more-link') %>
            <% end %>
        <% end %>
      </div>



    </div>

  </div>

</div>