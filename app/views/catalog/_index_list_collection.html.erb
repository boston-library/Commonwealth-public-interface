<%# index list view template  %>
<div class="collection_index_container">

  <div class="media">
    <%= link_to(create_thumb_img_element(document, %w(index_thumb media-object)),
                collection_path(:id => document[:id]),
                :class => 'pull-left') %>
    <div class="media-body">

      <div class="view_all_link">
        <% if document[blacklight_config.institution_field.to_sym] %>
            <%= link_to_all_col_items(document[blacklight_config.index.title_field.to_sym],
                                      document[blacklight_config.institution_field.to_sym],
                                      'view-all-col') %>
        <% end %>
      </div>

      <div class="item_index_title">
        <%= link_to(document[blacklight_config.index.title_field.to_sym],
                    collection_path(:id => document[:id])) %>
        <% if params[:controller] == 'catalog' %>
            <%= image_tag('dc_collection-icon.png',
                          :alt => 'collection icon',
                          :class => 'collection-icon') %>
        <% end %>
      </div>

      <div class="collection-location">
        <% if document[:institution_pid_ssi] && document[blacklight_config.institution_field.to_sym] %>
            <%= link_to(document[blacklight_config.institution_field.to_sym].first,
                        institution_path(document[:institution_pid_ssi])) %>
        <% end %>
      </div>

      <div class="item_index_details">
        <% if document[:abstract_tsim] %>
            <% abstract_index = strip_tags(document[:abstract_tsim].first.gsub(/<\/p><p>/,' ')).html_safe %>
            <%= truncate(abstract_index,
                        :length => 300,
                        :separator => ' ',
                        :omission => '... ') %>
            <% if abstract_index.length > 300 %>
                <%= link_to('more',
                            collection_path(:id => document[:id]),
                           :class => 'read-more-link') %>
            <% end %>
        <% end %>
      </div>



    </div>

  </div>

</div>