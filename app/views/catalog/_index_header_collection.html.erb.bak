<%# header bar for collection items in index view -%>
<div class="documentHeader">

  <h5 class="index_title document-title-heading">
    <% if counter = document_counter_with_offset(document_counter) %>
      <span class="document-counter">
        <%= t('blacklight.search.documents.counter', counter: counter) %>
      </span>
    <% end %>
    <%= link_to_document document,
                         presenter(document).render_document_index_label(document_show_link_field(document)) + index_relation_base_icon(document),
                         counter: counter %>
  </h5>

</div>