<div class="row">
  <div id="thumb_img_show_container" class="span3">
    <%= link_to(create_thumb_img_element(document[:exemplary_image_ssi],
                                         document[:type_of_resource_ssim],
                                         document[blacklight_config.index.title_field.to_sym],
                                         'thumb_img_show'),
                @document[:identifier_uri_ss],
                :target => '_blank',
                :title => t('blacklight.oai_objects.link_to_item',
                            :institution_name => document[:institution_name_ssim].first)) %>
    <%= render :partial => 'catalog/_show_partials/show_oai_item_link',
               :locals => {:document => @document} %>
  </div>
  <% # metadata display -%>
  <%= render :partial => 'catalog/_show_partials/show_default_metadata', :locals => {:document => @document} %>

  <div id="sidebar" class="span3">
    <% # bookmark/folder/sharing functions -%>
    <%= render_document_sidebar_partial  %>
  </div>
</div>