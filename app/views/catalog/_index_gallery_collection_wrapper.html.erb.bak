<%# collections catalog#index gallery view %>
<div class="document col-xs-6 col-md-3">
  <div class="thumbnail">
    <%= link_to(create_thumb_img_element(document), collection_path(:id => document[:id])) %>
    <div class="caption">
      <%= render_document_partials document, blacklight_config.view_config(:gallery).partials, :document_counter => document_counter %>
    </div>
  </div>
</div>