<%# index grid view template  %>
<div class="collection_index_container">
  <div class="item_index_thumb">
    <%= link_to(create_thumb_img_element(document, %w(index_thumb)),
                collection_path(:id => document[:id])) %>
  </div>
  <div class="item_index_title">
    <%= link_to document[blacklight_config.index.title_field.to_sym],
                collection_path(:id => document[:id]) %>
    <% if params[:controller] == 'catalog' %>
        <%= image_tag('dc_collection-icon.png',
                      :alt => 'collection icon',
                      :class => 'collection-icon') %>
    <% end %>
  </div>
</div>